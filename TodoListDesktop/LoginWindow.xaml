<Window x:Class="TodoListDesktop.LoginWindow" 
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:local="clr-namespace:TodoListDesktop" 
mc:Ignorable="d" 
Title="TodoList" SizeToContent="Height" Width="280" ResizeMode="NoResize">
    <Grid Background="#FFFDE0BE">
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition MinHeight="30"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Enter table name:" HorizontalAlignment="Center" Foreground="#FF233F89" Background="#00000000" FontSize="16"/>
        <TextBox Name="tableName" Grid.Row="1" FontSize="16" TextAlignment="Center" TextWrapping="Wrap" Background="{x:Null}" Foreground="#FFF3950C" />
        <Button Grid.Row="2" Content="Select" Click="Button_Click" Foreground="#FF1E2D91" Background="#FFF7BB89" FontSize="16" FontWeight="DemiBold" BorderThickness="0"/>
    </Grid>
</Window>